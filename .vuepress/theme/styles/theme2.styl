@tailwind base;

html  {
    position: relative;
    top: 0;
    bottom: 0;
    height: 100%;
    z-index: 50;
    background: rgba(26,80,58,1);
background: -moz-linear-gradient(-45deg, rgba(26,80,58,1) 0%, rgba(13,0,89,1) 100%);
background: -webkit-gradient(left top, right bottom, color-stop(0%, rgba(26,80,58,1)), color-stop(100%, rgba(13,0,89,1)));
background: -webkit-linear-gradient(-45deg, rgba(26,80,58,1) 0%, rgba(13,0,89,1) 100%);
background: -o-linear-gradient(-45deg, rgba(26,80,58,1) 0%, rgba(13,0,89,1) 100%);
background: -ms-linear-gradient(-45deg, rgba(26,80,58,1) 0%, rgba(13,0,89,1) 100%);
background: linear-gradient(135deg, rgba(26,80,58,1) 0%, rgba(13,0,89,1) 100%);
    src: local('Work Sans'), local('Work-Sans'), url(./fonts/WorkSans-ExtraLight.otf) format('otf');
}


@tailwind components;

@tailwind utilities;





h1 {
    text-shadow: 0px 2px 0px rgba(204, 204, 204, 1);
}

h1, h2, h3, h4, p {
    font-family: 'Work Sans', Verdana, sans-serif;
    src: local('Work Sans'), local('Work-Sans'), url(./fonts/WorkSans-ExtraLight.otf) format('otf');

}

.markdown-body {
    background: rgba(255, 255, 255,.75);
    font-family: 'Work Sans', Verdana, sans-serif;
    src: local('Work Sans'), local('Work-Sans'), url(./fonts/WorkSans-ExtraLight.otf) format('otf');
}



@css {
    .blog-body p {
        @apply .pb-5;
    }
    html {
        @apply .bg-cover .bg-no-repeat .bg-fixed;
    }
}

//video media queries
@media (max-width: 576px) {
    .video {
        width: 200px
        height: 175px  
    }
}

@media (min-width: 576px) {
    .video {
        width: 360px
        height: 215px  
    }
}

@media (min-width: 1200px) {
    .video {
        width: 560px
        height: 315px  
    }
}


